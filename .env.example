# TWILIO (Required for phone calls)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
AGENT_PHONE_NUMBER=+1234567890

# DATABASE
USE_MOCK_DB=true
DATABASE_URL=postgresql://postgres:password@localhost:5432/callbot_db

# Set to true to use Ollama LLM (requires ollama serve running)
CALLBOT_USE_LLM=false

# Ollama settings (only if CALLBOT_USE_LLM=true)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b-instruct

# SERVER
HOST=0.0.0.0
PORT=8000
DEBUG_MODE=false

# FEATURES
ENABLE_TTS=true
MAX_CONVERSATION_TURNS=10

VITE_API_URL=http://localhost:8000/api

# Database Configuration
DATABASE_URL=postgresql+asyncpg://callbot:password@localhost:5432/callbot_db

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000


